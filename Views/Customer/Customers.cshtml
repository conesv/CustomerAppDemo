@using CustomerApp.Controllers;
@model List<Customer>
@{
}


<div>
    <h1 class="display-4">Customers</h1>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Customer Id</th>
                <th>Name</th>
                <th>Last Name</th>
                <th> <a class="btn btn-primary" asp-controller="Customer" asp-action="statuschange">Ver @(CustomerController.status ? "Inactivo" : "Activo") </a> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Where(c => c.status == CustomerController.status))
            {
                <tr>
                    <td><a asp-controller="Customer" asp-action="DisplayData" asp-route-id="@item.Id">@item.Id</a></td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td><input type="checkbox" asp-for="@item.status" /></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr style="text-align:right">
                <td colspan="4">  <a class="btn btn-primary" asp-controller="Customer" asp-action="NewCustomerForm">Nuevo </a>  </td>
            </tr>
        </tfoot>
    </table>

</div>